.serviceItem {
  margin-top: 10px;
  padding: 15px;
  border-top: 1px solid #c6c7c8; /*px*/
  border-bottom: 1px solid #c6c7c8; /*px*/
  & > img {
    width: 100%;
  }
  & ul {
    display: flex;
    flex-wrap: wrap;
  }
  & li {
    box-sizing: border-box;
    width: 49%;
    height: 390px;
    margin-top: 15px;
    padding: 10px;
    border: 1px solid #c6c7c8; /*px*/
    &:nth-child(2n) {
      margin-left: 2%;
    }
    & img {
      width: 100%;
      height: 235px;
    }
  }
}