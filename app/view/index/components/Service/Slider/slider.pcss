img {
  vertical-align: top;
}
.viewport {
  width: 300%;
  overflow: hidden;
  margin: 0 auto;
  -webkit-transform: translateZ(0);
}

.item {
  box-sizing: border-box;
  width: 750px;
  height: 370px;
  background: #EFEFEF;
  float: left;
  color: #666;
  & img{
    width: 100%;
    height: 100%;
  }
}
